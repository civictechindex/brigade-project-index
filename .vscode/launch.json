    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl organizations",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--orgs",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1",
                "--orgs-source=https://raw.githubusercontent.com/themightychris/brigade-information/patch-1/organizations.json"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl projects",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--projects",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1"
            ],
            "env": {
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "inputs": [
        {
            "id": "githubActor",
            "type": "promptString",
            "description": "GitHub Username",
            "default": "themightychris"
        },
        {
            "id": "githubToken",
            "type": "promptString",
            "description": "GitHub Personal Access Token",
            "default": "ac3b31ce10b171c3de6fc9b99869d5a99ffabbf0"
        }
    ]
}