{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch: index-v1 build-index",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "HOLOLENS_INPUT": "snapshot/v1"
            },
            "program": "${workspaceFolder}/.holo/branches/index-v1.lenses/build-index/build-index.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawler: Jest All",
            "cwd": "${workspaceFolder}/crawler",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}",
            },
            "program": "${workspaceFolder}/crawler/node_modules/.bin/jest",
            "args": [
                "--runInBand",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawler: Jest Current File",
            "cwd": "${workspaceFolder}/crawler",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}",
            },
            "program": "${workspaceFolder}/crawler/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl organizations",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1"
            },
            "args": [
                "--orgs",
                "--commit-to=snapshot/v1",
                "--commit-orgs-to=cfapi/orgs/v1",
                "--orgs-source=file://${workspaceFolder}/crawler/lib/repositories/organizations/__fixtures__/test-organizations.json"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl projects",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}"
            },
            "args": [
                "--projects",
                "--commit-to=snapshot/v1",
                "--commit-orgs-to=cfapi/orgs/v1"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl all",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}"
            },
            "args": [
                "--all",
                "--commit-to=snapshot/v1",
                "--commit-orgs-to=cfapi/orgs/v1",
                "--orgs-source=file://${workspaceFolder}/crawler/lib/repositories/organizations/__fixtures__/test-organizations.json",
                "--scratch-git-dir=/tmp/bpi-scratch.git"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "inputs": [
        {
            "id": "githubActor",
            "type": "promptString",
            "description": "GitHub Username",
            "default": ""
        },
        {
            "id": "githubToken",
            "type": "promptString",
            "description": "GitHub Personal Access Token",
            "default": ""
        }
    ]
}